{
  "name": "whatsapp-representative-agent",
  "version": "2.0.0",
  "description": "Autonomous Representative WhatsApp Agent (Neon DB Edition)",
  "main": "dist/index.js",
  "scripts": {
    "start": "node --max-old-space-size=1024 dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "postbuild": "echo 'Build complete. Migrations should be run manually via Neon console if needed.'",
    "lint": "eslint src/**/*.ts",
    "db:push": "drizzle-kit push:pg",
    "clear-auth": "ts-node scripts/clear-auth.ts",
    "clear-lock": "ts-node scripts/clear-lock.ts",
    "check-lock": "ts-node scripts/check-lock.ts",
    "add-indexes": "ts-node scripts/add-indexes.ts",
    "migrate": "ts-node scripts/run-migration.ts",
    "check-keys": "ts-node scripts/check-api-keys.ts",
    "test-scheduling": "ts-node scripts/test-scheduling.ts",
    "test-booking": "ts-node scripts/test-booking-e2e.ts"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "whatsapp",
    "ai",
    "agent",
    "drizzle",
    "neon",
    "postgres"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@neondatabase/serverless": "^0.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@whiskeysockets/baileys": "^7.0.0-rc.9",
    "axios": "^1.13.4",
    "cheerio": "^1.2.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "drizzle-orm": "^0.29.3",
    "express": "^5.2.1",
    "googleapis": "^170.1.0",
    "node-cron": "^4.2.1",
    "pino": "^8.17.2",
    "qrcode-terminal": "^0.12.0",
    "typescript": "^5.3.3"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/qrcode-terminal": "^0.12.2",
    "drizzle-kit": "^0.20.13",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2"
  }
